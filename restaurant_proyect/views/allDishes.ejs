<%- include('head') %>
<link rel="stylesheet" href="/stylesheets/allRestaurants.css">
<title>Platos</title>
<%- include('navbar') %>

<main class="container-xxl">
  <section class="row section1">
    <div class="col-12 text-center">
      <h1>TODOS LOS PLATOS</h1>
      
          <div class="d-flex flexwrap gap-4 m-3 row justify-content-center">
            <% result.forEach( elem =>{ %>
        
                <div class="card col-3 p-0" style="width: 18rem;">
                  <img src="/images/dishes/<%= elem.dishes_img %>" class="card-img-top" alt="platos">
                  <div class="card-body d-flex flex-column justify-content-between">
                    <h4 class="card-title mb-3"><%= elem.dishes_name %></h4>
                    <p class="card-text mb-4"><%= elem.dishes_description %></p>
                    <button class="btn btn-dark"><a href="/restaurants/oneRestaurant/<%= elem.restaurant_id %>" >CONOCER EL RESTAURANTE</a></button>
                  </div>
                </div>
                <% }) %>
              </div>
      
    </div>
  </section>

  

</main>

<%- include('footer') %>