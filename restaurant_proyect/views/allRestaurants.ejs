<%- include('head') %>
<link rel="stylesheet" href="/stylesheets/allRestaurants.css">
<title>Restaurantes</title>
<%- include('navbar') %>

<main>
  
  <div class="fondo">
    <div class="container-xxl">
      <section class="row section1 justify-content-center min-height align-content-center">
        <h1 class="pb-3 text-center">TODOS LOS RESTAURANTES</h1>
        <% result.forEach(elem => { %>
          <div class="d-flex  justify-content-evenly col-12 col-md-6 col-xl-3">
            <div class="experts postit">
              <a href="/restaurants/oneRestaurant/<%= elem.restaurant_id %>"><img src="/images/restaurant/<%= elem.rest_img %>" alt="imagen del restaurante"></a>
              <h3 class="pt-2"><%= elem.rest_name %></h3>
              <p class="mb-1">Estilo de cocina: <%= elem.style %></p>
              <a class="link-color mb-3" href="mailto:<%= elem.email %>"><%= elem.email %></a>
              <a href="/restaurants/oneRestaurant/<%= elem.restaurant_id %>"><button class="btn btn-dark pt-2">VER M√ÅS</button></a>
            </div>
          </div>
          <%})%>
      </section>
    
    </div>
  </div>

  
</main>

<%- include('footer') %>