<%- include('head') %>
<link rel="stylesheet" href="/stylesheets/oneRestaurant.css">
<title>Un restaurante</title>
<%- include('navbar') %>

<main class="container-xxl">
  <section class="row section1 align-items-center text-center padding-y">
    <div class="col-12 col-md-6 mb-5">
      
        <img src="/images/restaurant/<%= result[0].rest_img  %>" alt="imagen del restaurante">
      
    </div>
    <div class="col-12 col-md-6 mb-5">
      <h1><br> <%= result[0].rest_name %></h1>
      <h2 class="mb-5"><%= result[0].style %></h2>
      <p class="mx-5"><%= result[0].rest_description %></p>
    </div>
      
    <div class="botones col-12">
        <a href="/restaurants/editRestaurant/<%= result[0].restaurant_id %>"><button class="btn btn-dark">MODIFICAR RESTAURANTE</button></a>
        
        <a href="/dishes/createDishes/<%= result[0].restaurant_id %>"><button class="btn btn-dark">AÑADIR UN PLATO</button></a>
        <a href="/restaurants/deleteRestaurantLogic/<%= result[0].restaurant_id %>"><button class="btn btn-dark">ELIMINAR LÓGICA</button></a>
        <a href="/restaurants/deleteRestaurant/<%= result[0].restaurant_id %>"><button class="btn btn-dark">ELIMINAR TOTAL</button></a>
      </div>
  </section>

  <!-- section 2 -->
  <section>
    <div class="d-flex flexwrap gap-4 row justify-content-center section2 mt-0">
    <% result_dishes.forEach((elem)=>{ %>

        <div class="card col-12 col-md-6 col-xl-3 p-0" style="width: 18rem;">
          <img src="/images/dishes/<%= elem.dishes_img %>" class="card-img-top" alt="platos del restaurante">
          <div class="card-body d-flex flex-column justify-content-between">
            <div class="text-center">
              <h4 class="card-title"><%= elem.dishes_name %></h4>
              <p class="card-text mb-3"><%= elem.dishes_description %></p>
            </div>
            
            <div class="d-flex">
              <a href="/dishes/deleteDishesLogic/<%= elem.dishes_id %>/<%= elem.restaurant_id %>" class="m-1 btn btn-dark">Borrado Lógico</a>
              
              <a href="/dishes/deleteDishes/<%= elem.dishes_id %>/<%= elem.restaurant_id %>" class="m-1 btn btn-dark">Borrar Total</a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </section>

</main>

<%- include('footer') %>